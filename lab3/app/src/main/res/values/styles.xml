<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.ActionBar.Transparent" parent="AppTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimary">@android:color/transparent</item>
    </style>

    <style name="AppTheme.CardView">
        <item name="elevation">10dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/button</item>
        <!-- <item name="android:shadowRadius">8dp</item>
         <item name="android:radius">8dp</item>-->
    </style>

    <style name="AppTheme.EditText" >
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:inputType">text</item>
        <item name="colorBackgroundFloating">@color/colorPrimary</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

</resources>
